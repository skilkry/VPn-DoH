<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bkg"
    tools:context=".CertificateVerificationActivity">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VerificaciÃ³n de Certificados"
        android:textSize="22sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/poppins_regular"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Estado: No verificado"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/poppins_regular"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:indeterminateTint="#FFFFFF"
        android:layout_marginBottom="16dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/certInfoTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FFFFFF"
            android:fontFamily="@font/poppins_regular"
            android:textSize="14sp" />
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/pinCertButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar Certificado (Certificate Pinning)"
            android:fontFamily="@font/poppins_regular"
            android:background="@drawable/button_border"
            android:textColor="#FFFFFF"
            android:enabled="false"
            android:layout_marginBottom="12dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/verifyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verificar Certificado"
            android:fontFamily="@font/poppins_regular"
            android:background="@drawable/button_border"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/configServerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Configurar Servidor"
            android:fontFamily="@font/poppins_regular"
            android:background="@drawable/button_border"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>
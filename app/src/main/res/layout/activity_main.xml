<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Contenedor principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Barra de herramientas (Toolbar) -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#29121212"
            app:title="@string/my_app" />

        <!-- Semáforo de estado del certificado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/certStatusIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/cert_status_gray"
                android:contentDescription="Estado del certificado" />

            <TextView
                android:id="@+id/certStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Estado: Sin verificar"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Panel de botones de configuración -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end"
            android:padding="16dp">

            <ImageButton
                android:id="@+id/btnServer"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Configuración"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_settings" />

            <Button
                android:id="@+id/dnsButton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@android:color/black"
                android:textColor="#fff"
                android:text="DNS" />

            <Button
                android:id="@+id/certsButton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="#fff"
                android:text="Certs"
                android:backgroundTint="@android:color/black"/>

            <Button
                android:id="@+id/serverButton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="#fff"
                android:text="Server"
                android:backgroundTint="@android:color/black"/>

        </LinearLayout>

        <!-- Contenedor de la interfaz principal con el botón de encendido -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <!-- Contenedor para el botón de encendido -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <!-- Botón principal con fondo personalizado -->
                <ImageButton
                    android:id="@+id/powerButton"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/button_background_green"
                    android:scaleType="fitCenter"
                    android:contentDescription="Botón de encendido"
                    android:src="@null" />

                <!-- Ícono de encendido sobre el botón -->
                <ImageView
                    android:id="@+id/powerIcon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/power_on" />
            </RelativeLayout>

            <!-- Los botones para controlar la VPN -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:orientation="vertical"
                android:layout_marginBottom="32dp">

                <Button
                    android:id="@+id/onButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DNS PROTECT" />

                <Button
                    android:id="@+id/offButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="DNS PROTECT"
                    android:visibility="gone" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
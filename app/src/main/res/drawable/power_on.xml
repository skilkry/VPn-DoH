<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 200 200">
    <!-- Círculo base con gradiente mejorado -->
    <circle cx="100" cy="100" r="90" fill="url(#mainGradient)" />

    <!-- Definición de gradientes -->
    <defs>
        <!-- Gradiente principal (colores más apagados para OFF) -->
        <radialGradient id="mainGradient" cx="50%" cy="50%" r="50%" fx="35%" fy="35%">
            <stop offset="0%" stop-color="#B3B3B3" />
            <stop offset="50%" stop-color="#808080" />
            <stop offset="100%" stop-color="#4D4D4D" />
        </radialGradient>

        <!-- Gradiente para brillo -->
        <radialGradient id="glowGradient" cx="50%" cy="50%" r="50%" fx="50%" fy="50%">
            <stop offset="0%" stop-color="#FFFFFF" stop-opacity="0.5" />
            <stop offset="100%" stop-color="#FFFFFF" stop-opacity="0" />
        </radialGradient>

        <!-- Filtro para efecto de sombra interior -->
        <filter id="innerShadow" x="-50%" y="-50%" width="200%" height="200%">
            <feGaussianBlur in="SourceAlpha" stdDeviation="4" result="blur" />
            <feOffset dx="0" dy="0" result="offsetBlur" />
            <feComposite in="SourceAlpha" in2="offsetBlur" operator="out" result="innerShadow" />
            <feFlood flood-color="#333333" flood-opacity="0.5" result="color" />
            <feComposite in="color" in2="innerShadow" operator="in" result="shadowInner" />
            <feComposite in="shadowInner" in2="SourceGraphic" operator="over" />
        </filter>

        <!-- Filtro para efecto de destello -->
        <filter id="glow" x="-50%" y="-50%" width="200%" height="200%">
            <feGaussianBlur in="SourceGraphic" stdDeviation="5" result="blur" />
            <feColorMatrix in="blur" type="matrix" values="1 0 0 0 0.3  0 1 0 0 1  0 0 1 0 0.8  0 0 0 1 0" result="glow" />
            <feBlend in="SourceGraphic" in2="glow" mode="screen" />
        </filter>
    </defs>

    <!-- Círculo con efecto de sombra interior -->
    <circle cx="100" cy="100" r="90" fill="none" filter="url(#innerShadow)" />

    <!-- Anillo brillante exterior (más tenue para OFF) -->
    <circle cx="100" cy="100" r="94" fill="none" stroke="url(#glowGradient)" stroke-width="2" opacity="0.4">
        <animate attributeName="opacity" values="0.3;0.5;0.3" dur="4s" repeatCount="indefinite" />
        <animate attributeName="r" values="92;94;92" dur="4s" repeatCount="indefinite" />
    </circle>

    <!-- Anillo secundario -->
    <circle cx="100" cy="100" r="86" fill="none" stroke="#B3B3B3" stroke-width="1.5" opacity="0.3" />

    <!-- Símbolo de encendido moderno (en estado OFF) -->
    <g filter="url(#glow)">
        <!-- Círculo del símbolo de encendido -->
        <circle cx="100" cy="115" r="30" fill="none" stroke="#CCCCCC" stroke-width="10" stroke-opacity="0.8" stroke-dasharray="88.5 88.5" stroke-dashoffset="110.5" />

        <!-- Línea vertical del símbolo de encendido -->
        <line x1="100" y1="55" x2="100" y2="75" stroke="#CCCCCC" stroke-width="10" stroke-linecap="round" stroke-opacity="0.8" />
    </g>

    <!-- Botón invisible para controlar animación -->
    <circle id="button" cx="100" cy="100" r="90" opacity="0" cursor="pointer" />
</svg>
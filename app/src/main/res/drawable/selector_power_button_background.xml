<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="true">
        <shape android:shape="oval">
            <solid android:color="@color/color_power_on"/> <stroke android:width="2dp" android:color="?attr/colorPrimary"/>
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/color_power_off"/> <stroke android:width="1dp" android:color="?attr/colorOutline"/>
        </shape>
    </item>
</selector>
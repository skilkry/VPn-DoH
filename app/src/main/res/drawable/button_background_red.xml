<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Sombra exterior -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#CCCCCC"/>  <!-- Color gris claro -->
            <size android:width="200dp" android:height="200dp"/>
            <corners android:radius="100dp"/>
        </shape>
    </item>

    <!-- Anillo blanco -->
    <item android:top="10dp" android:bottom="10dp" android:left="10dp" android:right="10dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF"/>  <!-- Color blanco -->
        </shape>
    </item>

    <!-- CÃ­rculo verde -->
    <item android:top="20dp" android:bottom="20dp" android:left="20dp" android:right="20dp">
        <shape android:shape="oval">
            <solid android:color="#ff0000"/>  <!-- rojo -->
        </shape>
    </item>
</layer-list>

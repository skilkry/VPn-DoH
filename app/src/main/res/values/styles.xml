<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema base -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowAnimationStyle">@style/ActivityAnimation</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="materialCardViewStyle">@style/AppCard</item>
        <item name="materialButtonStyle">@style/AppButton</item>
    </style>

    <!-- Textos -->
    <style name="StatusConnectionText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="StatusCertText" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="SecondaryInfoText" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary_gray</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="HelpText" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary_gray</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="SecurityAuditTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SecurityAuditDescription">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="SecurityAuditDetails">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="AboutFeatureItem">
        <item name="android:textColor">#CCCCCC</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Botones -->
    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="cornerRadius">12dp</item>
        <item name="rippleColor">#33FFFFFF</item>
    </style>

    <style name="ConfigPanelButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/config_button_text_color</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="iconTint">@color/config_button_icon_tint</item>
        <item name="strokeColor">@color/config_button_stroke</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Otros estilos -->
    <style name="StatusChip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="chipMinHeight">32dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="StatusChip.Connected">
        <item name="chipBackgroundColor">#664CAF50</item>
    </style>

    <style name="AppCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">8dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="rippleColor">#33FFFFFF</item>
    </style>

    <style name="ActivityAnimation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_up</item>
        <item name="android:activityCloseEnterAnimation">@anim/pulse</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_up</item>
    </style>

    <style name="CustomSwitchStyle" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="thumbTint">@color/switch_thumb_selector</item>
        <item name="trackTint">@color/switch_track_selector</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="ToolbarTitleStyle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="SettingsFab" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">#44FFFFFF</item>
        <item name="tint">#FFFFFF</item>
        <item name="rippleColor">#80FFFFFF</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
    </style>
</resources>

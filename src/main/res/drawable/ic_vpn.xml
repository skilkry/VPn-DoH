<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo del ícono -->
    <item android:drawable="@android:color/white" />
    <!-- Círculo que representa la conexión VPN -->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#4CAF50"/> <!-- Verde, puedes cambiar el color -->
            <corners android:radius="10dp"/>
            <size android:width="40dp" android:height="40dp"/>
        </shape>
    </item>
    <!-- Línea vertical que puede representar la conexión de VPN -->
    <item android:right="10dp" android:left="10dp" android:top="10dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#ffffff"/>
            <size android:width="4dp" android:height="22dp"/>
        </shape>
    </item>
</layer-list>
